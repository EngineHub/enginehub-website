{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@shared/*": ["shared/src/*"],
            "@builds/*": ["builds/src/*"],
            "@main/*": ["main-site/src/*"],
            "@paste/*": ["paste/src/*"],
            "@golf/*": ["golf/src/*"]
        },
        "allowJs": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "noUnusedParameters": true,
        "importHelpers": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true
    },
    "exclude": ["node_modules"],
    "include": [
        "main-site/src/**/*",
        "builds/src/**/*",
        "builds/pages/**/*",
        "paste/pages/**/*",
        "paste/src/**/*",
        "golf/pages/**/*",
        "golf/src/**/*",
        "shared/src/**/*"
    ]
}
