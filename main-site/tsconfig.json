{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "lib": ["dom", "esnext"],
        "jsx": "preserve",
        "emitDecoratorMetadata": true,
        "noEmit": true,
        "skipLibCheck": true,
        "incremental": true,
        "isolatedModules": true,
        "moduleResolution": "node"
    },
    "include": ["./src/**/*", "./pages/**/*"],
    "exclude": [".next"],
    "files": ["./src/index.d.ts", "next-env.d.ts"]
}
