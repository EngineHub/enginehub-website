{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "lib": ["dom", "es2017"],
        "jsx": "react",
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmit": true,
        "skipLibCheck": true
    },
    "include": ["./src/**/*", "../shared/src/components/navbar.tsx", "../shared/src/components/footer.tsx"],
    "exclude": [".cache", "public"]
}
