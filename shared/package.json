{
    "name": "@enginehub/shared",
    "private": true,
    "description": "Shared libs for the EngineHub sites",
    "version": "1.0.0",
    "author": "EngineHub",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "dependencies": {
        "@types/styled-components": "^5.1.22",
        "polished": "^4.1.4",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "styled-components": "^5.3.3"
    },
    "devDependencies": {
        "@types/node": "^14.14.41",
        "@types/react": "^17.0.39",
        "@types/react-dom": "^17.0.11",
        "declaration-bundler-webpack-plugin": "git://github.com/clipchamp/declaration-bundler-webpack-plugin",
        "lint-staged": "^12.3.3",
        "source-map-loader": "^3.0.1",
        "ts-loader": "^9.2.6",
        "tsconfig": "^7.0.0",
        "tslint": "^6.1.3",
        "tslint-react": "^5.0.0",
        "typescript": "^4.5.5",
        "webpack": "^5.68.0",
        "webpack-cli": "^4.9.2"
    },
    "lint-staged": {
        "./**/*.{ts,tsx}": [
            "tslint --project ./tsconfig.json --config ./tslint.json --fix",
