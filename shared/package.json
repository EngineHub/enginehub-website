        ]
    },
    "keywords": [
        "enginehub",
        "worldedit",
        "worldguard",
        "craftbook"
    ],
    "scripts": {
        "type-check": "tsc --project ./tsconfig.json --noEmit",
        "lint": "tslint --config ./tslint.json --project ./tsconfig.json",
        "lint:fix": "tslint --config ./tslint.json --project ./tsconfig.json --fix",
        "prepare": "npx webpack"
    }
