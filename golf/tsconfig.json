{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "jsx": "preserve",
        "lib": ["dom", "esnext"],
        "module": "esnext",
        "moduleResolution": "node",
        "noEmit": true,
        "skipLibCheck": true,
        "target": "esnext",
        "isolatedModules": true,
        "incremental": true
    },
    "include": [
        "pages/**/*",
        "src/**/*",
        "../shared/src/utils/encryptedSecrets.ts"
    ],
    "exclude": ["node_modules"]
}
