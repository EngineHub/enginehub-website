{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "jsx": "preserve",
    "lib": [
      "dom",
      "es2017"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "target": "esnext",
    "isolatedModules": true
  },
  "include": [
    "pages/**/*",
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
